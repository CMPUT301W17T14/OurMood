<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yifanwang.mymood1.AddNewEvent">

    <TextView
        android:text="Mood Status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:id="@+id/textView4" />


    <RadioButton
        android:text="Anger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/radioButton6"
        android:layout_marginLeft="90dp"/>

    <RadioButton
        android:text="Confusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="95dp"
        android:id="@+id/radioButton7" />

    <RadioButton
        android:text="Disgust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton7"

        android:id="@+id/radioButton8"
        android:layout_marginLeft="95dp"/>

    <RadioButton
        android:text="Fear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton8"
        android:layout_alignStart="@+id/radioButton8"
        android:id="@+id/radioButton9"
        />

    <RadioButton
        android:text="Happiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton6"
        android:layout_toEndOf="@+id/radioButton6"
        android:layout_marginStart="40dp"
        android:id="@+id/radioButton10" />

    <RadioButton
        android:text="Sadness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton10"
        android:layout_alignStart="@+id/radioButton10"
        android:id="@+id/radioButton11" />

    <RadioButton
        android:text="Shame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton11"
        android:layout_alignEnd="@+id/radioButton11"
        android:layout_alignStart="@+id/radioButton11"
        android:id="@+id/radioButton12" />

    <RadioButton
        android:text="Surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton8"
        android:layout_alignEnd="@+id/radioButton12"
        android:layout_alignStart="@+id/radioButton12"
        android:id="@+id/radioButton13" />

    <TextView
        android:text="Trigger:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton9"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="50dp"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Input some keywords"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/radioButton9" />


    <RadioButton
        android:text="Alone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_toStartOf="@+id/radioButton13"
        android:id="@+id/radioButton20" />

    <TextView
        android:text="Social Situation:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton20"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="29dp"
        android:id="@+id/textView7" />

    <RadioButton
        android:text="With one other person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton20"

        android:layout_alignStart="@+id/radioButton20"
        android:id="@+id/radioButton24" />

    <RadioButton
        android:text="With more than one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton24"

        android:layout_alignStart="@+id/radioButton24"
        android:id="@+id/radioButton25" />

    <RadioButton
        android:text="Crowd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton25"
        android:layout_alignEnd="@+id/radioButton25"
        android:layout_alignStart="@+id/radioButton25"
        android:id="@+id/radioButton26" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_camera"
        android:layout_alignBottom="@+id/button3"
        android:layout_toStartOf="@+id/radioButton6"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/imageButton"
        android:background="#00000000"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_location_2"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignEnd="@+id/radioButton26"
        android:id="@+id/imageButton3"
        android:background="#00000000"
        android:onClick="findlocation"/>

    <Button
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginBottom="24dp"
        android:background="#99ccff"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="19dp"
        android:onClick="send"/>

</RelativeLayout>
