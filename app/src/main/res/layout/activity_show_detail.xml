<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yifanwang.mymood1.ShowDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Detail"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            tools:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="0.11" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/noimage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:text="name:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nameVIEW"
            android:textSize="18sp"
            android:layout_weight="0.09" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView34"
            android:text="Mood Status:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/motionView"
            android:layout_above="@+id/textView10"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:textSize="18sp"
            android:layout_weight="0.15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView35"
            android:text="Date:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/timeView"
            android:layout_alignTop="@+id/textView7"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:textSize="18sp"
            android:layout_weight="0.12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView36"
            android:text="Reason:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/resonView"
            android:layout_alignTop="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView5"
            android:text="Social Situation:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/socialView"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView37"
            android:text="Location:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/loactionView"
            android:layout_alignBaseline="@+id/likeView"
            android:layout_alignBottom="@+id/likeView"
            android:layout_toEndOf="@+id/textView8"
            android:textSize="18sp" />

        <Button
            android:text="Edit"
            android:onClick="editMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditButton"
            android:layout_weight="0.11" />

        <Button
            android:text="DELETE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteButton"
            android:layout_weight="0.11" />


    </LinearLayout>

</RelativeLayout>